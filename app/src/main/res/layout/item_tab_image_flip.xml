<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:gravity="center"
    android:orientation="horizontal">

    <eu.davidea.flipview.FlipView
        android:id="@+id/flip_view"
        android:layout_width="@dimen/tab_icon_w_h"
        android:layout_height="@dimen/tab_icon_w_h"
        android:autoStart="true"
        app:animateDesignLayoutOnly="true"
        app:checked="false"
        app:enableInitialAnimation="true">

        <ImageView
            android:layout_width="@dimen/tab_icon_w_h"
            android:layout_height="@dimen/tab_icon_w_h"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:duplicateParentState="true"
            android:gravity="center"
            android:src="@drawable/icon_fork_selector"/>

        <ImageView
            android:layout_width="@dimen/tab_icon_w_h"
            android:layout_height="@dimen/tab_icon_w_h"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:duplicateParentState="true"
            android:gravity="center"
            android:src="@drawable/icon_film_selector"/>

        <ImageView
            android:layout_width="@dimen/tab_icon_w_h"
            android:layout_height="@dimen/tab_icon_w_h"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:duplicateParentState="true"
            android:gravity="center"
            android:src="@drawable/icon_location_selector"/>

    </eu.davidea.flipview.FlipView>


</LinearLayout>